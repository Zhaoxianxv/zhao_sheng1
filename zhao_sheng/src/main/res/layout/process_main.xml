<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/public_swip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/WhiteSmoke"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/process_bottom_line_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@color/GhostWhite"
            android:orientation="horizontal"
            android:layout_height="@dimen/margin_45dp">
            <TextView
                android:id="@+id/process_bottom_add"
                android:layout_weight="1"
                android:text="新增"
                android:textSize="@dimen/textsize8"
                android:textColor="@color/base_color"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:id="@+id/process_bottom_admin"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/process_bottom_admin_name"
                    android:text="管理"
                    android:textSize="@dimen/textsize8"
                    android:textColor="@color/base_color"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/process_bottom_admin_count"
                    android:layout_toRightOf="@id/process_bottom_admin_name"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:background="@drawable/bg_bottom_badge"
                    android:backgroundTint="#aaef2424"
                    android:text="99+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize3"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:background="@color/gray"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/process_bottom_line_layout"
            android:orientation="vertical">
            <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
            <LinearLayout
                android:id="@+id/process_main_scan_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45dp"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/process_main_scan_selected_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="全部"
                    android:textColor="@color/app_base_text_color"
                    android:background="@color/GhostWhite"
                    android:gravity="center"/>
                <!--<View-->
                    <!--android:layout_width="@dimen/margin_0.5dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/gray"/>-->
                <!--<TextView-->
                    <!--android:id="@+id/moral_two_class"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="全部班级"-->
                    <!--android:textColor="@color/app_base_text_color"-->
                    <!--android:background="@color/GhostWhite"-->
                    <!--android:gravity="center"/>-->
            </LinearLayout>
            <View
                android:id="@+id/process_main_scan_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5dp"
                android:visibility="gone"
                android:background="@color/gray"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/public_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>

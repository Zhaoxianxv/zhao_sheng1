<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/process_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/process_head_icon"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/process_right_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize7"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_centerVertical="true"
        android:text="维修状态"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_60dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/process_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:textSize="@dimen/textsize8"
            android:textColor="#3a3a3a"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="报修地点"/>

        <TextView
            android:id="@+id/process_title_sub"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/textsize4"
            android:text="2017-11-11"/>
        <TextView
            android:id="@+id/process_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:textSize="@dimen/textsize5"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="维修状态"/>
    </LinearLayout>

</RelativeLayout>